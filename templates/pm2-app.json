{
  apps : [
    // {{heljs_name}}
    {
      name      : "{{heljs_name}}",
      script    : "{{heljs_entrypoint}}",
      watch	: "/home/{{heljs_user}}/service_state/touch_to_reload",
      {% if heljs_server_environment is defined %}
      env:
          {{ heljs_server_environment | to_nice_json }}
      ,
      {% endif %}
      env_production : {
        NODE_ENV: "production"
      },
    },
  ],
}
